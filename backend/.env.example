# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Stripe (Optional - for payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# HeyGen (Optional - for video avatars)
HEYGEN_API_KEY=

# N8N Webhooks (Optional - for integrations)
N8N_WEBHOOK_URL=

# Google Services (Optional - for calendar and sheets)
GOOGLE_CALENDAR_ID=
GOOGLE_SHEETS_ID=
GOOGLE_SERVICE_ACCOUNT_KEY=

# Language Configuration
DEFAULT_LANGUAGE=en
LANGUAGE_MODE=auto
ALLOWED_LANGUAGES=en,pt-BR,es

# Redis Configuration (REQUIRED for session state persistence)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_TTL=86400

# Session State Configuration
# TTL for conversation state (in seconds)
# Default: 3600 (1 hour)
# Recommended: 1800-3600 (30-60 minutes)
SESSION_STATE_TTL_SECONDS=3600

# Supabase (Optional - for database)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
